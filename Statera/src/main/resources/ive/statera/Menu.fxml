<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" styleClass="global" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MenuController">
  <stylesheets>
    <URL value="@css/Menu.css"/>
  </stylesheets>

  <HBox>
    <VBox styleClass="box-home-button">
      <Button fx:id="home" layoutX="8.0" layoutY="6.0" mnemonicParsing="false" onAction="#home" text="Home"
              styleClass="home-button"/>
    </VBox>
    <VBox styleClass="box-title">
      <Label fx:id="titleText" layoutX="110.0" layoutY="10.0" styleClass="title" text="Menu">
      </Label>
    </VBox>
  </HBox>

  <VBox styleClass="body">
    <VBox alignment="CENTER" styleClass="box-buttons">
      <Button fx:id="information" mnemonicParsing="false" onAction="#onClickedInformationButton"
              styleClass="button-style" text="Informations"/>
      <Button fx:id="selectBiome" mnemonicParsing="false" onAction="#onClickedSelectBiomeButton"
              styleClass="button-style" text="Select biome"/>
      <Button fx:id="unlockWasteland" mnemonicParsing="false" onAction="#onClickedUnlockWastelandButton"
              styleClass="button-style" text="Unlock wasteland"/>
    </VBox>

    <HBox alignment="CENTER" styleClass="box-buttons">
      <Button fx:id="replayGame" mnemonicParsing="false" onAction="#onClickedReplayGame" styleClass="button-style"
              text="Replay game"/>
      <Button fx:id="quitGame" mnemonicParsing="false" onAction="#onClickedQuitGame" styleClass="button-style"
              text="Quit game"/>
    </HBox>
  </VBox>
  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0" styleClass="footer">
  </HBox>
</VBox>
