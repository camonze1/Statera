<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MenuController" styleClass="global">
  <stylesheets>
    <URL value="@css/Menu.css"/>
  </stylesheets>

  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0" styleClass="header">
    <Label fx:id="titleText" layoutX="110.0" layoutY="10.0" text="MENU" styleClass="title">
    </Label>
  </HBox>

  <HBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" styleClass="body">
    <Button fx:id="home" layoutX="8.0" layoutY="6.0" mnemonicParsing="false" onAction="#onClickedHome" text="Home" styleClass="home-button"/>
    <Button fx:id="selectBiome" layoutX="300.0" layoutY="88.0" mnemonicParsing="false"
            onAction="#onClickedSelectBiomeButton" text="Select biome" styleClass="select-biome-button"/>
    <Button fx:id="quitGame" layoutX="400.0" layoutY="88.0" mnemonicParsing="false" onAction="#onClickedQuitGame"
            text="Quit game" styleClass="quit-button"/>
  </HBox>

  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0" styleClass="footer">
  </HBox>
</VBox>
