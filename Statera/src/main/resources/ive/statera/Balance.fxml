<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" styleClass="global" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.BalanceController">
    <stylesheets>
        <URL value="@css/Balance.css"/>
    </stylesheets>

    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0" styleClass="header">
        <Label fx:id="titleText" layoutX="110.0" layoutY="10.0" styleClass="title" text="All the balance">
        </Label>
    </HBox>

    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0" styleClass="body">
        <Button fx:id="menu" layoutX="8.0" layoutY="6.0" mnemonicParsing="false" onAction="#onClickedMenu" styleClass="menu-button" text="Menu" />
        <Button fx:id="home" layoutX="8.0" layoutY="6.0" mnemonicParsing="false" onAction="#onClickedHome" styleClass="home-button" text="Home" />
    </HBox>


    <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0" styleClass="footer">
    </HBox>

</VBox>
